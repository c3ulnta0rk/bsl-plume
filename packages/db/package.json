{
  "name": "@bsl-plume/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./src/schema/index.ts"
    },
    "./queries": {
      "types": "./src/queries/index.ts",
      "default": "./src/queries/index.ts"
    }
  },
  "scripts": {
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "seed": "tsx src/seed/index.ts",
    "studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@bsl-plume/validators": "workspace:*",
    "drizzle-orm": "^0.44",
    "postgres": "^3.4"
  },
  "devDependencies": {
    "@bsl-plume/config": "workspace:*",
    "@faker-js/faker": "^9",
    "@types/node": "^20",
    "drizzle-kit": "^0.31",
    "tsx": "^4.8",
    "vitest": "^3"
  }
}
