{
  "name": "bsl-plume",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "format": "biome format --write .",
    "check": "biome check .",
    "db:generate": "pnpm --filter @bsl-plume/db generate",
    "db:migrate": "pnpm --filter @bsl-plume/db migrate",
    "db:seed": "pnpm --filter @bsl-plume/db seed"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "turbo": "^2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@8.4.0"
}
